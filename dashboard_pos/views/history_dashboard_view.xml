<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="history_dashboard_tree_view" model="ir.ui.view">
        <field name="name">history.dashboard.tree</field>
        <field name="model">history.dashboard</field>
        <field name="arch" type="xml">
            <tree string="history dashboard" create="false">
                <field name="date" width="1.6"/>
                <field name="config_id" width="1.6" decoration-bf="1"/>
                <field name="amount_total" width="1.6" decoration-bf="1"/>
                <field name="order_number" width="1.6" decoration-bf="1"/>
                <field name="cart_moyen" width="1.6"/>
            </tree>
        </field>
    </record>


    <record id="view_history_dashboard_tree_action" model="ir.actions.act_window">
        <field name="name">Détails de caisse</field>
        <field name="res_model">history.dashboard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="history_dashboard_tree_view"/>
    </record>

    <menuitem name="Détails" id="pos_detail_menu"
                  sequence="2"
                  parent="dashboard_pos.menu_pos_dashboard"
                  groups="point_of_sale.group_pos_manager"
                  action="view_history_dashboard_tree_action"/>
</odoo>